@model AuthorEditViewModel

<!-- Heading for the Author Edit Form -->
<h3 class="mt-3">Yazar Düzenleme Sayfası</h3>

<!-- Form for editing an existing author -->
<form method="post" asp-controller="Author" asp-action="AuthorEdit" class="mt-5">
    <!-- Hidden input for the author's ID -->
    <input type="hidden" asp-for="ıd" />

    <!-- First Name input group -->
    <div>
        <label>Yazar Adı</label>
        <input asp-for="firstName" class="form-control" type="text" />
        <span asp-validation-for="firstName" class="text-danger mt-3 fw-bold"></span>
    </div>

    <!-- Last Name input group -->
    <div>
        <label>Yazar Soyadı</label>
        <input asp-for="lastName" class="form-control" type="text" />
        <span asp-validation-for="lastName" class="text-danger mt-3 fw-bold"></span>
    </div>

    <!-- Date of Birth input group -->
    <div>
        <label>Doğum Tarihi</label>
        <input asp-for="dateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="dateOfBirth" class="text-danger mt-3 fw-bold"></span>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
</form>

<!-- Partial view to render the footer -->
<partial name="_footerPartial" /> 