@model LoginViewModel

<div class="row offset-3 mt-5">
    <div class="col-6" style="width:60%">
        <div class="card">
            <div class="card-header fw-bold fs-4 text-center">
                Oturum Aç
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Auth" asp-action="Login">

                    @* ViewBag ile hata mesajını gösterme *@
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
                    {
                        <div class="alert alert-danger fw-bold">
                            <span>@ViewBag.Error</span>
                        </div>
                    }

                    <div class="form-floating mt-2">
                        <input asp-for="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-2">
                        <input asp-for="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary w-100 py-2 mt-3" type="submit">Giriş Yap</button>
                    <p class="mt-5 mb-3 text-body-secondary">© 2024</p>
                </form>
            </div>
        </div>
    </div>
</div>